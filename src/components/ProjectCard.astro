---
interface Props {
  title: string;
  description: string;
  image: string;
  githubUrl: string;
}

const { title, description, image, githubUrl } = Astro.props;
---

<a
  href={githubUrl}
  target="_blank"
  rel="noopener noreferrer"
  class="project-card block bg-gray-100 dark:bg-gray-100 p-6 rounded-lg hover:opacity-80 transition-opacity"
>
  <div class="mb-4">
    <img
      src={image}
      alt={title}
      class="w-full aspect-video object-cover bg-black rounded"
    />
  </div>
  <h3 class="text-xl mb-2 text-black">
    {title} â†’
  </h3>
  <p class="text-base text-black opacity-70">{description}</p>
</a>
