---
import '../styles/global.css';

interface Props {
  title?: string;
}

const { title = 'emma king dev' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet">
    <title>{title}</title>

    <script is:inline>
      // Initialize theme: use stored preference, otherwise follow OS setting
      const stored = localStorage.getItem('theme');
      const darkQuery = window.matchMedia('(prefers-color-scheme: dark)');
      const isDark = stored ? stored === 'dark' : darkQuery.matches;
      document.documentElement.classList.toggle('dark', isDark);

      // Listen for OS preference changes (only applies if user hasn't set preference)
      darkQuery.addEventListener('change', (e) => {
        if (!localStorage.getItem('theme')) {
          document.documentElement.classList.toggle('dark', e.matches);
        }
      });
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>
